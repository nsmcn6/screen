<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="com.example.kuaikuait.screen.MainActivity">        <ListView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="1"            android:id="@+id/list" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">                <Button                        android:text="Add"                        android:id="@+id/btn_toadd"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_weight="1"/>                <Button                    android:text="begin float"                    android:id="@+id/btn_beginfloat"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"/>                <Button                    android:text="stop float"                    android:id="@+id/btn_stopfloat"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"/>        </LinearLayout></LinearLayout>